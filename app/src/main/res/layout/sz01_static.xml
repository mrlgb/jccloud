<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:stretchColumns="*">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="地下水采样现场记录表"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TableRow android:layout_weight="0">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutClientSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtClientSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="委托单位(*)"
                android:textAlignment="center" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutDateSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtDateSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="采样时间(*)" />

        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TableRow android:layout_weight="4">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutEquipmentSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtEquipmentSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="仪器编号、名称、型号(*)"
                android:textAlignment="center" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutWeatherSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtWeatherSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="天气(*)" />

        </android.support.design.widget.TextInputLayout>
    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <TableRow android:layout_weight="2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutSignColletorSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtSignColletorSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="采样员签字(*)"
                android:textAlignment="center" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iLayoutSignClientSZ_01_Static"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/edtSignClientSZ_01_Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="委托方签字(*)" />

        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="增加样本"
                android:textSize="10sp"
                android:theme="@style/MyButton"
                android:visibility="invisible"
                tools:ignore="SmallSp" />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="删除样本"
                android:textSize="10sp"
                android:theme="@style/MyButton"
                android:visibility="invisible"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/btn_SaveSZ_01_Static"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存"
                android:textSize="10sp"
                android:theme="@style/MyButton"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/btn_SubmitSZ_01_Static"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提交"
                android:textSize="10sp"
                android:theme="@style/MyButton"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</TableLayout>