<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/table4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="*">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="地下水采样现场记录表"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <TableRow android:layout_weight="0">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutClientSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtClientSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="委托单位(*)"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutDateSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtDateSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="采样时间(*)"
                    android:textAlignment="center"/>

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow android:layout_weight="0">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutEquipmentSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtEquipmentSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="仪器编号、名称、型号(*)"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutWeatherSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtWeatherSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="天气(*)"
                    android:textAlignment="center"/>

            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="采样现场描述（处理设施和现场状况评估）"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <TableRow >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutSampleDesc1SZ06Static"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <EditText
                    android:id="@+id/edtSampleDesc1SZO6Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="200m范围内的污染情况"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutSampleDesc2SZO6Static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtSampleDesc2SZO6Static"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="采样点所在水系和库区"
                    android:textAlignment="center" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutSampleDescSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtSampleDescSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="样品现场处理情况"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:paddingTop="12dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutSignColletorSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtSignColletorSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="采样员签字(*)"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/iLayoutSignClientSZ06Static"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/edtSignClientSZ06Static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="委托方签字(*)"
                    android:textAlignment="center"/>

            </android.support.design.widget.TextInputLayout>
        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>
